<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:background="@drawable/down_body_border_n">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_vertical|center"
            android:src="@drawable/ic_qna_q"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qna_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:textSize="15dp"
                android:textColor="@color/boardDate"/>

            <TextView
                android:id="@+id/qna_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp"
                android:gravity="top|left"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="@color/board"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="17dp"
                    android:gravity="center|left"
                    android:text="답변 "
                    android:textColor="@color/boardDetailNum"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/qna_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center|center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/boardDetailNum"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|center"
                    android:src="@drawable/ic_main_notice_line"/>

                <TextView
                    android:id="@+id/qna_name"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/board"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>