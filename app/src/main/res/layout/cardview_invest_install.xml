<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardView:cardElevation="@dimen/table_card_elevation"
    cardView:cardCornerRadius="@dimen/table_card_corner_radius"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_invest_install_instlsn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="순번"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_size"/>
        <TextView
            android:id="@+id/tv_invest_install_instlse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="구분"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_size"/>
        <TextView
            android:id="@+id/tv_invest_install_instlde"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="설치일자"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_size"/>
        <TextView
            android:id="@+id/tv_invest_install_instlnm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="설치자"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_size"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
