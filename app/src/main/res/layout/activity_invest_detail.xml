<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.mrns.invest.view.activity.InvestDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_header"
        android:background="@drawable/nav_bg_green"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_back_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_invest_detail_nav_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_btn_back_n"
                    android:padding="@dimen/activity_horizontal_margin" />

                <TextView
                    android:id="@+id/tv_invest_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ib_invest_detail_nav_back"
                    android:gravity="center"
                    android:text="@string/title_activity_invest_serach"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/invert_text_title_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.neokree.materialtabs.MaterialTabHost
        android:id="@+id/tab_invest_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_bg_green">
    </com.neokree.materialtabs.MaterialTabHost>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_invest_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/investDetailBottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_invest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_invest_detail_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/tabbar_menu01_n"
                />
            <TextView
                android:id="@+id/btn_invest_detail_input_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:text="@string/invest_detail_bottom_menu1"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_invest_detail_history"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/tabbar_menu02_n"
                />
            <TextView
                android:id="@+id/btn_invest_detail_history_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:text="@string/invest_detail_bottom_menu2"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_invest_detail_install"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/tabbar_menu03_n"
                />
            <TextView
                android:id="@+id/btn_invest_detail_install_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:text="@string/invest_detail_bottom_menu3"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_invest_detail_gis"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/tabbar_menu04_n"
                />
            <TextView
                android:id="@+id/btn_invest_detail_gis_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:text="@string/invest_detail_bottom_menu4"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_invest_detail_point"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/tabbar_menu05_n"
                />
            <TextView
                android:id="@+id/btn_invest_detail_point_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:text="@string/invest_detail_bottom_menu5"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>