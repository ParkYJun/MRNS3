<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/down_body_border_n">

        <!--<ImageView-->
            <!--android:id="@+id/iv_invest_result_pointKnd"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_weight="0.7"-->
            <!--android:src="@drawable/ic_list_type_red"-->
            <!--android:scaleType="center"-->
            <!--/>-->

        <TextView
            android:id="@+id/tv_invest_result_pointnm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/str_invest_result_defnm"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_s_size"/>

        <TextView
            android:id="@+id/tv_invest_result_mtrsttus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/str_invest_result_state"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_s_size"/>

        <TextView
            android:id="@+id/tv_invest_result_instlde"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="@string/str_invest_result_install"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/invert_text_header_ss_size"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|bottom"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_invest_result_pointKnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_list_type_red"
                    android:scaleType="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_invest_result_inqsttus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/str_invest_result_invest"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/invert_text_header_s_size"/>

            </LinearLayout>




        </LinearLayout>


        <ImageView
            android:id="@+id/tv_invest_result_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:src="@drawable/ic_list_pin"
            android:scaleType="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
