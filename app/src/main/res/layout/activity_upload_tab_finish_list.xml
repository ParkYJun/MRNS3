<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/down_body_border_n">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/point_kind"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.7" />

        <TextView
            android:id="@+id/point_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center"
            android:layout_weight="1.2"
            android:textSize="15dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/point_status"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center"
            android:layout_weight="0.8"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/invest_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center"
            android:layout_weight="1.2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/invest_status"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical|center"
            android:layout_weight="1"
            android:textColor="@color/downTitle"
            android:textSize="16dp" />

        <!--<ImageView-->
        <!--android:id="@+id/point_location"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical|center"-->
        <!--android:layout_marginLeft="0dp"/>-->

    </LinearLayout>

</LinearLayout>