<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity = "center_horizontal">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_sub4_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mrns.invest.view.activity.InvestDetailActivity"
        android:layout_below="@+id/detail_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/detail_one"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="원점명"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_two"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/detail_one"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="세계 위도\n(B)"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:text="세계 경도\n(L)"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_three"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/detail_two"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="세계타원체고(H)"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_four"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/detail_three"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="세계표고(H)"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_five"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/detail_four"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="세계종선(X)"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="12dp"
                    android:text="세계횡선\n(Y)"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_six"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/detail_five"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="지오선수차"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_seven"
                android:layout_width="fill_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/detail_six"
                android:background="@drawable/down_body_border_n">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:text="세계표고구분"
                    android:textSize="14dp"
                    android:textColor="@color/uploadDetail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="16dp"
                    android:textSize="15dp"
                    android:textColor="@color/uploadDetailValue"
                    android:background="@drawable/edittext_n"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>