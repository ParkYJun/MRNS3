<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/down_body_border_n">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <CheckBox
            android:id="@+id/upload_ck"
            android:layout_marginLeft="6dp"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            />


        <ImageView
            android:id="@+id/point_kind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical|center"
            android:src="@drawable/btn_map_blue_n"/>

        <TextView
            android:id="@+id/point_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="대전101"
            android:gravity="center_vertical|center"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/point_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="망실"
            android:gravity="center_vertical|center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/invest_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_marginLeft="6dp"
            android:text="2016-05-17"
            android:gravity="center_vertical|left"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/invest_status"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="조사완료"
            android:gravity="center_vertical|left"
            android:textColor="@color/downTitle"
            android:textSize="14dp" />

        </LinearLayout>

</androidx.cardview.widget.CardView>